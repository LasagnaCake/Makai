	macro join {
		{$($)}											=> {""														}
		{$($value:expr$)}								=> {$value													}
		{$($first:expr *{, $rest:expr}$)}				=> {($first + core.String.join($*rest{,}))					}
		{$[$]$($)}										=> {""														}
		{$[$sep:expr$]$()}								=> {""														}
		{$[$sep:expr$]$($value:expr)}					=> {$value													}
		{$[$sep:expr$]$($first:expr *{, $rest:expr}$)}	=> {(($first + $sep) + core.String.join[$sep]($*rest{,}))	}
	}
}

extend str with func slice(begin: int, end: int): str	=> String.slice(ref self, begin, end);
extend str with func split(sep: str): arr				=> String.split(ref self, sep);
extend str with func replace(match: str, rep: str): str	=> String.replace(ref self, match, rep);
extend str with func remove(match: str): str			=> String.remove(ref self, match);
extend str with func contains(match: str): bool			=> String.contains(ref self, match);
extend str with func matches(match: str): bool			=> String.matches(ref self, match);
extend str with func find(match: str): arr				=> String.find(ref self, match);

extend str with func toString(): str	=> copy self;
extend str with func clone(): str		=> copy self;
