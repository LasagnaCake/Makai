scene Movement
	function to-x (pos)
		*"Moving to X: %pos%"
	end

	function to-y (pos)
		*"\nMoving to Y: %pos%"
	end

	function to-z (pos)
		*"\nMoving to Z: %pos%"
	end

	function move-2d (x, y)
		""
		call ~to-x (%x)
		call ~to-y (%y)
	end

	function move-3d (x, y, z)
		""
		call ~move-2d (%x, %y)
		call ~to-z ("%z%")
	end
	
	function move-3d-xz (x, z)
		""
		call ~move-3d (%x, 0, %z)
	end
end

