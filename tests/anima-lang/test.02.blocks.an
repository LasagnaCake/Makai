next main
scene MyFirstScene
	scene NewBeginnings
		act lets-go-gambling
			act win *" Aw, dangit!" end
			act lose *" Yippee!" end
			"Let's go gambling!"
			perform choice random (win, lose)
			perform choice random (win, lose)
			perform choice random (win, lose)
		end
		act start-of-the-adventure
			"Let us commence."
		end
		act severe-debt
			"Oh no, I am broke now :("
			act loan-sharks
				"Time to borrow some money..."
				next :MyFirstScene:endings
			end
			next loan-sharks
		end
	end
	act endings
		act bad-end
			"BAD END"
		end
		act neutral-end
			"NEUTRAL END"
		end
		act good-end
			"GOOD END"
		end
		next choice random (good-end, neutral-end, bad-end, none)
		"Huh?"
		"STRANGE END???"
		terminate
	end
	perform NewBeginnings:start-of-the-adventure
	perform NewBeginnings:lets-go-gambling
	perform NewBeginnings:severe-debt
end
act main
	perform ~MyFirstScene
	"The end!"
end
