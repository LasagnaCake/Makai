menu MainMenu
	"Main Game"	: open Difficulty end
	"Options"	: open Options end
	"Quit"		: terminate
	none		: option "Quit"
end

menu Difficulty
	"Easy"		: $difficulty E open PlayerSelect end
	"Normal"	: $difficulty N open PlayerSelect end
	"Hard"		: $difficulty H open PlayerSelect end
	"Lunatic"	: $difficulty L open PlayerSelect end
	none		: return
end

menu PlayerSelect
	"Alice"	: $load-stage "Alice" end
	"Bob"	: $load-stage "Bob" end
	none	: return
end

menu Options
	none	: return
end

open MainMenu