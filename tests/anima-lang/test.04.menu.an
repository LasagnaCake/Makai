menu MainMenu
	"Main Game"	: close MainMenu open Difficulty end
	"Options"	: close MainMenu open Options end
	"Quit"		: terminate
	none		: option "Quit"
end

menu Difficulty
	"Easy"		: $difficulty E close Difficulty open PlayerSelect end
	"Normal"	: $difficulty N close Difficulty open PlayerSelect end
	"Hard"		: $difficulty H close Difficulty open PlayerSelect end
	"Lunatic"	: $difficulty L close Difficulty open PlayerSelect end
	none		: return
end

menu PlayerSelect
	"Alice"	: close PlayerSelect $load-stage "Alice" end
	"Bob"	: close PlayerSelect $load-stage "Bob" end
	none	: return
end

menu Options
	none	: return
end

open MainMenu